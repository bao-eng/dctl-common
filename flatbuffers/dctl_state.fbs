namespace dctl.flat_state;

enum Dir : byte {None, Up, Down, Left, Right}

struct Vec2 {
  x:float;
  y:float;
}

struct Color {
  r:ubyte;
  g:ubyte;
  b:ubyte;
}

table Snake {
  player_id:int32;
  tail:[Vec2];
  dir:Dir;
  color:Color;
}

table State {
  sequence:uint32;
  snakes:[Snake];
}

root_type State;
file_identifier "STAT";
file_extension "state";
